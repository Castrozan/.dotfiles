/* Import theme colors */
@import url("@HOME@/.config/hypr-theme/current/theme/waybar.css");

* {
  background-color: transparent;
  color: @foreground;
  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: 'JetBrainsMono Nerd Font';
  font-size: 12px;
}

window#waybar {
  background-color: alpha(@background, 0.85);
}

.modules-left {
  margin-left: 0;
}

.modules-right {
  margin-right: 8px;
}

#custom-ws1,
#custom-ws2,
#custom-ws3,
#custom-ws4,
#custom-ws5,
#custom-ws6,
#custom-ws7 {
  padding: 0 6px;
  margin: 0 5px;
  color: @foreground;
  font-weight: bold;
  background: transparent;
  border: none;
  border-radius: 4px;
}

#custom-ws1.empty,
#custom-ws2.empty,
#custom-ws3.empty,
#custom-ws4.empty,
#custom-ws5.empty,
#custom-ws6.empty,
#custom-ws7.empty {
  color: @surface;
  font-weight: normal;
}

#custom-ws1.active,
#custom-ws2.active,
#custom-ws3.active,
#custom-ws4.active,
#custom-ws5.active,
#custom-ws6.active,
#custom-ws7.active {
  color: @accent;
  font-weight: 900;
  font-size: 13px;
  border-bottom: 4px solid @accent;
}

#custom-ws1.occupied,
#custom-ws2.occupied,
#custom-ws3.occupied,
#custom-ws4.occupied,
#custom-ws5.occupied,
#custom-ws6.occupied,
#custom-ws7.occupied {
  color: @accent;
}

#custom-ws1:hover,
#custom-ws2:hover,
#custom-ws3:hover,
#custom-ws4:hover,
#custom-ws5:hover,
#custom-ws6:hover,
#custom-ws7:hover {
  color: @dimmed;
}

#image {
  margin: 0;
  margin-right: 8px;
  padding-left: 12px;
}

#cpu,
#battery,
#pulseaudio,
#network,
#bluetooth,
#custom-notification-sound {
  min-width: 12px;
  margin: 0 7.5px;
}

#custom-notification-sound.on {
  color: @foreground;
}

#custom-notification-sound.muted {
  color: @warning;
}

#tray {
  margin-right: 16px;
}

#bluetooth {
  margin-right: 17px;
}

#network {
  margin-right: 13px;
}

#custom-expand-icon {
  margin-right: 18px;
}

tooltip {
  background-color: alpha(@background, 0.92);
  border: 1px solid @surface;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 14px;
}

#clock {
  margin-left: 8.75px;
}

#calendar {
  background-color: alpha(@background, 0.92);
  color: @foreground;
  border-radius: 8px;
  padding: 6px;
}

#calendar.header {
  color: @accent;
  font-weight: bold;
}

#calendar.weekday {
  color: @primary;
}

#calendar.today {
  color: @background;
  background-color: @accent;
  font-weight: bold;
  border-radius: 4px;
}
