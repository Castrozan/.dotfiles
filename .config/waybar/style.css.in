/* Import theme colors */
@import url("@HOME@/.config/hypr-theme/current/theme/waybar.css");

* {
  background-color: transparent;
  color: @foreground;
  border: none;
  border-radius: 0;
  min-height: 0;
  font-family: 'JetBrainsMono Nerd Font';
  font-size: 12px;
}

window#waybar {
  background-color: transparent;
}

.modules-center {
  background-color: alpha(@background, 0.85);
  border-radius: 999px;
  padding: 0 14px;
  margin-top: 4px;
}

#custom-ws1,
#custom-ws2,
#custom-ws3,
#custom-ws4,
#custom-ws5,
#custom-ws6,
#custom-ws7 {
  padding: 1px 4px;
  margin: 3px 2px;
  color: @foreground;
  font-weight: bold;
  background: transparent;
  border: none;
  border-radius: 999px;
  min-width: 18px;
}

#custom-ws1.empty,
#custom-ws2.empty,
#custom-ws3.empty,
#custom-ws4.empty,
#custom-ws5.empty,
#custom-ws6.empty,
#custom-ws7.empty {
  color: @secondary;
  font-weight: normal;
}

#custom-ws1.active,
#custom-ws2.active,
#custom-ws3.active,
#custom-ws4.active,
#custom-ws5.active,
#custom-ws6.active,
#custom-ws7.active {
  color: @background;
  background-color: @accent;
  font-weight: bold;
}

#custom-ws1.occupied,
#custom-ws2.occupied,
#custom-ws3.occupied,
#custom-ws4.occupied,
#custom-ws5.occupied,
#custom-ws6.occupied,
#custom-ws7.occupied {
  color: @accent;
}

#custom-ws4.empty {
  color: @warning;
  font-weight: normal;
}

#custom-ws4.occupied {
  color: @warning;
  font-weight: bold;
}

#custom-ws4.active {
  color: @background;
  background-color: @warning;
  font-weight: bold;
}

#custom-ws1:hover,
#custom-ws2:hover,
#custom-ws3:hover,
#custom-ws4:hover,
#custom-ws5:hover,
#custom-ws6:hover,
#custom-ws7:hover {
  color: @dimmed;
}

#custom-launcher {
  margin: 0 15px 0 0;
  color: @accent;
}

#battery,
#bluetooth,
#network,
#custom-notification-sound,
#custom-microphone {
  min-width: 12px;
  margin: 0 6px;
}

#custom-notification-sound {
  margin-left: 12px;
}

#custom-notification-sound.on {
  color: @foreground;
}

#custom-notification-sound.muted {
  color: @warning;
}

#custom-microphone.unmuted {
  color: @foreground;
}

#custom-microphone.muted {
  color: @warning;
}

#network {
  margin-right: 13px;
}

tooltip {
  background-color: alpha(@background, 0.92);
  border: 1px solid @surface;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 14px;
}

#clock {
  margin-right: 10px;
  font-weight: bold;
}

#calendar {
  background-color: alpha(@background, 0.92);
  color: @foreground;
  border-radius: 8px;
  padding: 6px;
}

#calendar.header {
  color: @accent;
  font-weight: bold;
}

#calendar.weekday {
  color: @primary;
}

#calendar.today {
  color: @background;
  background-color: @accent;
  font-weight: bold;
  border-radius: 4px;
}
