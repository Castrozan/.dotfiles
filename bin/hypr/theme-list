#!/usr/bin/env bash

USER_THEMES_PATH="$HOME/.config/hypr-theme/user-themes"
HYPR_THEMES_PATH="$HOME/.config/hypr/themes"

{
  find -L "$USER_THEMES_PATH" -mindepth 1 -maxdepth 1 -type d -printf '%f\n' 2>/dev/null
  find -L "$HYPR_THEMES_PATH" -mindepth 1 -maxdepth 1 -type d -printf '%f\n' 2>/dev/null
} | sort -u | while read -r name; do
  echo "$name" | sed -E 's/(^|-)([a-z])/\1\u\2/g; s/-/ /g'
done
