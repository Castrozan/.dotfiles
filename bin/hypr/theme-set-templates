#!/usr/bin/env bash

TEMPLATES_DIR="$HOME/.config/hypr/templates"
USER_TEMPLATES_DIR="$HOME/.config/hypr-theme/user-templates"
NEXT_THEME_DIR="$HOME/.config/hypr-theme/current/next-theme"
COLORS_FILE="$NEXT_THEME_DIR/colors.toml"

hex_to_rgb() {
  local hex="${1#\#}"
  printf "%d,%d,%d" "0x${hex:0:2}" "0x${hex:2:2}" "0x${hex:4:2}"
}

if [[ -f $COLORS_FILE ]]; then
  sed_script=$(mktemp)

  # Generate substitutions for each color
  while IFS='=' read -r key value; do
    key=$(echo "$key" | xargs)
    value=$(echo "$value" | xargs | tr -d '"')
    [[ -z "$key" ]] && continue

    echo "s|{{ $key }}|$value|g" >> "$sed_script"
    echo "s|{{ ${key}_strip }}|${value#\#}|g" >> "$sed_script"

    if [[ $value =~ ^# ]]; then
      rgb=$(hex_to_rgb "$value")
      echo "s|{{ ${key}_rgb }}|${rgb}|g" >> "$sed_script"
    fi
  done < "$COLORS_FILE"

  shopt -s nullglob

  for tpl in "$USER_TEMPLATES_DIR"/*.tpl "$TEMPLATES_DIR"/*.tpl; do
    filename=$(basename "$tpl" .tpl)
    output_path="$NEXT_THEME_DIR/$filename"
    sed -f "$sed_script" "$tpl" > "$output_path"
  done

  rm "$sed_script"
fi
