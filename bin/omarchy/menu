#!/usr/bin/env bash

BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | omarchy-fuzzel --dmenu --width 30 --lines 10 --prompt "$prompt> " 2>/dev/null
}

show_theme_menu() {
  theme=$(menu "Theme" "$(omarchy-theme-list)" "--width 350" "$(omarchy-theme-current)")
  if [[ -z "$theme" ]]; then
    back_to show_style_menu
  else
    omarchy-theme-set "$theme"
  fi
}

show_style_menu() {
  case $(menu "Style" "󰸌  Theme\n  Background") in
  *Theme*) show_theme_menu ;;
  *Background*) omarchy-theme-bg-next ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  Lock\n󰜉  Restart\n󰐥  Shutdown") in
  *Lock*) hyprlock ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n  Style\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) omarchy-fuzzel ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
