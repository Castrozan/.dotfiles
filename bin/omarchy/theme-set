#!/usr/bin/env bash

if [[ -z $1 ]]; then
  echo "Usage: omarchy-theme-set <theme-name>"
  exit 1
fi

CURRENT_THEME_PATH="$HOME/.config/omarchy/current/theme"
NEXT_THEME_PATH="$HOME/.config/omarchy/current/next-theme"
USER_THEMES_PATH="$HOME/.config/omarchy/user-themes"
OMARCHY_THEMES_PATH="$HOME/.config/omarchy/themes"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')

if [[ -e "$USER_THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$USER_THEMES_PATH/$THEME_NAME"
elif [[ -e "$OMARCHY_THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$OMARCHY_THEMES_PATH/$THEME_NAME"
else
  echo "Theme '$THEME_NAME' does not exist"
  exit 1
fi

rm -rf "$NEXT_THEME_PATH"
mkdir -p "$NEXT_THEME_PATH"

cp -rL --no-preserve=mode "$THEME_PATH/"* "$NEXT_THEME_PATH/" 2>/dev/null

omarchy-theme-set-templates

OLD_THEME_PATH="$HOME/.config/omarchy/current/old-theme"
rm -rf "$OLD_THEME_PATH"
mv "$CURRENT_THEME_PATH" "$OLD_THEME_PATH" 2>/dev/null || true
mv "$NEXT_THEME_PATH" "$CURRENT_THEME_PATH"
rm -rf "$OLD_THEME_PATH"

echo "$THEME_NAME" > "$HOME/.config/omarchy/current/theme.name"

omarchy-theme-bg-next

# Reload components for theme change
# Keep it minimal - only reload what's strictly necessary

# Apply Hyprland border colors (safe, just keyword changes)
omarchy-restart-hyprctl

# Waybar auto-reloads CSS via file watcher (reload_style_on_change: true)
# Only signal if we need full config reload
# pkill -USR2 waybar 2>/dev/null || true

# SwayOSD and swaync: skip restart to avoid crashes
# Users can restart session for full theme application

# Hyprshell auto-reloads CSS via file watcher (css reload listener)
# Avoid restart which causes "Broken pipe" crashes

omarchy-theme-set-gnome

notify-send "Theme changed" "$THEME_NAME" -t 2000
